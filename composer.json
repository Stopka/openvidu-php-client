{
    "name": "stopka/openvidu-php-client",
    "type": "library",
    "description": "Php client for openvidu server",
    "homepage": "https://github.com/Stopka/openvidu-php-client",
    "license": [
        "MIT"
    ],
    "authors": [
        {
            "name": "Štěpán Škorpil"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.5.3",
        "myclabs/php-enum": "^1.7.6"
    },
    "require-dev": {
        "phpstan/phpstan": "~0.12",
        "phpstan/phpstan-strict-rules": "~0.12",
        "slevomat/coding-standard": "^6.0",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan-deprecation-rules": "^0.12.2",
        "nette/tester": "^2.3.2",
        "mockery/mockery": "^1.3",
        "phpstan/phpstan-mockery": "^0.12.5",
        "ergebnis/phpstan-rules": "^0.15.0",
        "nepada/phpstan-nette-tester": "^0.3.0"
    },
    "autoload": {
        "psr-4": {
            "Stopka\\OpenviduPhpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stopka\\OpenviduPhpClient\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcbf": "phpcbf --standard=tests/phpcs.xml ./src ./tests",
        "phpcs": "phpcs --standard=tests/phpcs.xml src tests",
        "phpstan": "phpstan analyse --configuration tests/phpstan.neon src tests",
        "tester": "tester -p phpdbg tests -s --coverage ./tests/coverage.xml --coverage-src ./src",
        "test": [
            "@phpcs",
            "@phpstan",
            "@tester"
        ],
        "fix": [
            "@phpcbf"
        ]
    }
}
